rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    // ─── Admin check ───
    // The admin is identified by their Firebase Auth email.
    // Add your admin email(s) to this list.
    function isAdmin() {
      return request.auth != null &&
        request.auth.token.email in [
          'admin@example.com'
        ];
    }

    // ——— Users collection ———
    match /users/{userId} {
      // Users can read/write their own profile
      allow read, write: if isOwner(userId);

      // Admins can read ANY user (needed for payment list stream)
      allow read: if isAdmin();

      // Admins can update any user document (to set paymentStatus etc.)
      allow update: if isAdmin();
    }

    // ——— Submissions collection ———
    match /submissions/{submissionId} {
      allow create: if isSignedIn();
      allow read:   if isSignedIn();

      allow update: if isSignedIn() && (
        (resource.data.uid == request.auth.uid &&
         !request.resource.data.diff(resource.data).affectedKeys()
           .hasAny(['status', 'reviewedBy', 'reviewedAt', 'reviewComments'])) ||
        isAdmin()
      );

      allow delete: if isAdmin();
    }

    // ——— App settings ———
    match /app_settings/{doc} {
      allow read:  if isSignedIn();
      allow write: if isAdmin();
    }

    // ——— Counters ———
    match /counters/{doc} {
      allow read, write: if isSignedIn();
    }
  }
}
